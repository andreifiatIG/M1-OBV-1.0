{
  "env": {
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "overrides": [
    {
      "files": ["frontend/**/*.{ts,tsx}"],
      "extends": ["plugin:react/recommended", "plugin:@next/next/recommended"],
      "plugins": ["react"]
    },
    {
      "files": ["backend/**/*.{ts,js}"],
      "env": { "node": true }
    }
  ],
  "rules": {
    // Add custom rules here
  }
}
