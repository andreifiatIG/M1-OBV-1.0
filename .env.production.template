# M1 Villa Management System - Production Environment Template
# Copy this file to .env.production and fill in your production values

# === CRITICAL SECURITY SETTINGS ===
# Generate strong secrets before deployment!
JWT_SECRET=your_production_jwt_secret_32_chars_minimum
ENCRYPTION_KEY=your_32_char_encryption_key_here
SESSION_SECRET=your_production_session_secret_here

# === DATABASE CONFIGURATION ===
DATABASE_NAME=ils_m1_villa_management_prod
DATABASE_USER=villa_prod_user
DATABASE_PASSWORD=your_secure_database_password
DATABASE_PORT=5432
DATABASE_URL="postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@postgres:5432/${DATABASE_NAME}?schema=public&sslmode=require"

# === SERVICE PORTS ===
BACKEND_PORT=4001
FRONTEND_PORT=3001
REDIS_PORT=6379
ELECTRIC_PORT=3000

# === APPLICATION URLS ===
FRONTEND_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# === CLERK AUTHENTICATION ===
CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=${CLERK_PUBLISHABLE_KEY}

# === MICROSOFT AZURE / SHAREPOINT ===
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
SHAREPOINT_SITE_URL=https://yourcompany.sharepoint.com/sites/VillaManagement
SHAREPOINT_DRIVE_ID=your_sharepoint_drive_id

# === EMAIL CONFIGURATION ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_production_email@gmail.com
SMTP_PASS=your_app_specific_password

# === MONITORING (OPTIONAL) ===
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# === DEPLOYMENT SETTINGS ===
NODE_ENV=production
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# === FEATURE FLAGS ===
ENABLE_SHAREPOINT=true
ENABLE_ELECTRIC_SYNC=true
ENABLE_WEBSOCKETS=true
ENABLE_MICROSOFT_GRAPH=true

# === SECURITY SETTINGS ===
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAME_SITE=strict
CORS_CREDENTIALS=true